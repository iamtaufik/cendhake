generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Link {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  url String
  slug String @unique
  publisher String 
  createdAt DateTime @default(now()) @map("createdAt") @db.Date
}
